                    input(type='checkbox', name='favorite_pet', value='Chemistry')
                    | Chemistry
                    br
                    input(type='checkbox', name='favorite_pet', value='History')
                    | History
                    br
                    input(type='checkbox', name='favorite_pet', value='Psychology')
                    | Psychology
                    br
                    input(type='checkbox', name='favorite_pet', value='Music Theory')
                    | Music Theory
                    br
                    input(type='checkbox', name='favorite_pet', value='Chinese')
                    | Chinese
                    br
                    input(type='checkbox', name='favorite_pet', value='Spanish')
                    | Spanish
                    br
                    input(type='checkbox', name='favorite_pet', value='Computer Science')
                    | Computer Science
                    br
                    input(type='checkbox', name='favorite_pet', value='Sport Nutrition')
                    | Sport Nutrition
                    br
                    input(type='checkbox', name='favorite_pet', value='Art')
                    | Art
